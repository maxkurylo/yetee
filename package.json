{
    "name": "yetee",
    "version": "0.1.0",
    "description": "This is the root project for our frontend and backend",
    "main": "server/server.ts",
    "repository": "https://github.com/maxkurylo/yetee",
    "author": "Max Kurylo",
    "license": "MIT",
    "scripts": {
        "start": "node dist/server.js",
        "start-dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
        "build": "tsc",
        "build-ui": "cd client && yarn && yarn build",
        "server": "NODE_ENV=development nodemon --ignore ./client/ server/server.ts",
        "client": "cd client && yarn start",
        "heroku-postbuild": "yarn build && yarn build-ui",
        "deploy-to-heroku": "heroku maintenance:on && git push heroku master && heroku maintenance:off"
    },
    "devDependencies": {
        "@types/compression": "^1.7.2",
        "@types/express": "4.17.1",
        "@types/jsonwebtoken": "^8.5.8",
        "@types/passport": "^1.0.7",
        "@types/passport-jwt": "^3.0.6",
        "concurrently": "^5.1.0",
        "nodemon": "^2.0.15",
        "ts-node": "^10.7.0",
        "tslint": "^6.1.3",
        "typescript": "^4.6.2"
    },
    "dependencies": {
        "@types/bcryptjs": "^2.4.2",
        "@types/passport-facebook": "^2.1.11",
        "@types/passport-google-oauth": "^1.0.42",
        "@types/passport-linkedin-oauth2": "^1.5.3",
        "@types/randomstring": "^1.1.8",
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.19.0",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "dotenv": "^16.0.0",
        "express": "^4.17.1",
        "jsonwebtoken": "^8.5.1",
        "mongoose": "^5.9.1",
        "passport": "^0.4.1",
        "passport-facebook": "^3.0.0",
        "passport-google-oauth": "^2.0.0",
        "passport-jwt": "^4.0.0",
        "passport-linkedin-oauth2": "^2.0.0",
        "randomstring": "^1.2.1",
        "rxjs": "^7.5.5",
        "socket.io": "^4.2.0",
        "uuidv4": "^6.2.12"
    }
}
